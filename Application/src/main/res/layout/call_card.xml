<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/vc_timeseen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text="timeSeen"

            android:textColor="@color/black"
            android:textSize="18dp"
            />


        <RelativeLayout
            android:id="@+id/vc_expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/vc_Loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vc_fName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/montserrat"
                    android:layout_weight="1"

                    android:padding="5dp" />

                <TextView
                    android:id="@+id/vc_lName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LName"
                    android:layout_weight="3"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/vc_Loc">
                <TextView
                    android:id="@+id/vc_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="location"
                    android:padding="5dp"
                    android:textColor="@color/teal_700"
                    android:layout_weight="2"
                    android:fontFamily="@font/montserrat"/>

                <Button
                    android:id="@+id/vc_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:background="#40c837"
                    android:textColor="#ffffff"
                    android:layout_weight="2"
                    android:fontFamily="@font/montserrat"/>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>